{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@hooks/*": ["./hooks/*"],
      "@services/*": ["./services/*"],
      "@constants/*": ["./utils/constants/*"],
      "@styles/*": ["./styles/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}
